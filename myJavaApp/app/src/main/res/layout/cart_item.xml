<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@drawable/box_border"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="5dp"
    app:layout_goneMarginRight="5dp">
    <CheckBox
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_marginRight="10dp"
        android:id="@+id/itemCheckbox"/>
   <ImageView
       android:layout_width="60dp"
       android:layout_height="60dp"
       android:id="@+id/itemIcon"
       android:src="@drawable/cate_tea"/>
    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/infoArea"
        android:layout_marginLeft="15dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/itemName"
            android:text="Beverage Name"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/itemType"
            android:textColor="@color/black"
            android:text="Hot Coffee"
            android:textStyle="italic"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/itemCost"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="30$"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/groupChoosenQuantity"
        android:layout_marginTop="12dp"
        >
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/btnSubstract"
            android:src="@drawable/baseline_remove_24"
            android:background="@drawable/add_and_remove_button"
            android:stateListAnimator="@animator/button_animation"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/quantityResult"
            android:text="0"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/black"
            />
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/btnPlus"
            android:src="@drawable/baseline_add_black_24"
            android:background="@drawable/add_and_remove_button"
            android:stateListAnimator="@animator/button_animation"

            />
    </LinearLayout>


</LinearLayout>