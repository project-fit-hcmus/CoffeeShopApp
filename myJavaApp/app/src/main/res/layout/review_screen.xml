<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_1_fifth"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/reviewHeader"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        layout="@layout/sub_header"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/beverageInfo"
        android:background="@drawable/review_border"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/reviewHeader"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="10dp"
        app:layout_constraintRight_toRightOf="parent">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/baseline_check_circle_outline_24"
            android:id="@+id/checkicon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/orderAddress"
            android:text="An lưu, Phú Mỹ, Phú Vang, Thừa Thiên Huế"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:layout_margin="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/checkicon"
            tools:ignore="MissingConstraints" />
        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:id="@+id/divider"
            app:layout_constraintTop_toBottomOf="@+id/orderAddress"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_margin="5dp"
            app:layout_constraintRight_toRightOf="parent"/>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/orderCover"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/cate_tea"
            android:layout_margin="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/orderDate"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            app:layout_constraintLeft_toRightOf="@id/orderCover"
            android:text="Booking Date: 22/3/2023"
            android:textColor="@color/black"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:textSize="16dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/orderPhone"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/orderDate"
            app:layout_constraintLeft_toRightOf="@id/orderCover"
            android:text="Booking Phone: 0796728944"
            android:textColor="@color/black"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:textSize="16dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/totalPriceTitle"
            app:layout_constraintTop_toBottomOf="@+id/orderPhone"
            app:layout_constraintLeft_toRightOf="@+id/orderCover"
            android:text="Total: "
            android:layout_marginLeft="15dp"
            android:textColor="@color/black"
            android:textSize="16dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/orderTotal"
            app:layout_constraintTop_toBottomOf="@+id/orderPhone"
            app:layout_constraintLeft_toRightOf="@+id/totalPriceTitle"
            android:textColor="@color/red"
            android:textSize="16dp"
            android:text="$23"
            android:layout_marginLeft="30dp"
            android:textStyle="bold"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/reviewArea"
        android:background="@drawable/review_border"
        android:layout_margin="10dp"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/beverageInfo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Quality: "
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/txtQuality"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:padding="10dp"
            />
        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:id="@+id/ratingBar"
            app:layout_constraintTop_toBottomOf="@+id/txtQuality"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:rating="3.5"
            android:progressBackgroundTint="@color/light_gray"
            tools:ignore="MissingConstraints" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/subQuality"
            app:layout_constraintTop_toBottomOf="@id/ratingBar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="@color/btnColor"
            android:text="Wonderful"
            android:textStyle="bold"
            android:textSize="18dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtDetail"
            app:layout_constraintTop_toBottomOf="@+id/subQuality"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColor="@color/black"
            android:text="Comment Detail: "
            android:layout_margin="10dp"
            android:textSize="18dp"/>

        <EditText
            tools:ignore="MissingConstraints"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/mainContent"
            app:layout_constraintTop_toBottomOf="@+id/txtDetail"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/gray"
            android:textColor="@color/light_gray"
            android:layout_margin="10dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnSend"
        android:text="Send"
        app:layout_constraintTop_toBottomOf="@+id/reviewArea"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="10dp"
        android:background="@drawable/botron_button"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>