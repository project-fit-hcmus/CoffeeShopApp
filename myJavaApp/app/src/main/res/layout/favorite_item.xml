<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/favorite_item_background"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:layout_margin="10dp">
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/cate_juice"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/mainImg"
        tools:ignore="MissingConstraints" />
    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/mainImg"
        android:id="@+id/contentArea"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="Cream latte"
            android:textColor="@color/black"
            android:id="@+id/favoriteName"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/favoriteType"
            android:textColor="@color/black"
            android:text="Hot coffee"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/favoritePrice"
            android:text="25$"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:id="@+id/btnAddToCart"
            android:background="@drawable/rating_box_border"
            android:textColor="@color/white"
            android:stateListAnimator="@animator/button_animation"
            android:text="Add To cart"/>



    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>